{
  "name": "@lifeyourdreams/design-system",
  "version": "1.0.0",
  "description": "Life Your Dreams Design System - CSS Primitives",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "npm run build:css && npm run build:types",
    "build:css": "mkdir -p dist/styles && cp src/styles/*.css dist/styles/",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "npm run build:css -- --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lifeyourdreams/design-tokens": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
